<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.aminsholeh.lacakberkas.FormActivity"
android:orientation="vertical"
android:padding="15dp"
android:background="#3fe2b4"
    >




<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Form Berkas"
    android:textAlignment="center"
    android:textSize="24sp"
    android:layout_marginBottom="10dp"
    android:textStyle="bold"
    android:id="@+id/textView4" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView4"
    android:layout_marginTop="33dp"
    android:text="Nama Berkas"
    android:textAlignment="center"
    android:background="#ff00ff"
    android:textColor="#f9f9f9"
    android:padding="5dp"/>

<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignTop="@+id/textView5"
    android:padding="5dp"
    android:layout_marginTop="30dp" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/author"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:text="Detail Berkas"
    android:textAlignment="center"
    android:background="#ff00ff"
    android:textColor="#f9f9f9"
    android:padding="5dp"/>


<TextView
    android:id="@+id/author"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    android:background="#ffffff"/>

<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="Status Berkas"
    android:textAlignment="center"
    android:background="#ff00ff"
    android:textColor="#f9f9f9"
    android:padding="5dp"/>

<TextView
    android:id="@+id/num_of_copy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView"
    android:background="#ffffff"
    android:padding="5dp"
    />


<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="61dp"
    android:onClick="saveData"
    android:text="Kembali"
    android:background="#ea9c2e"/>

</RelativeLayout>
