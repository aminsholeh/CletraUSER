<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aminsholeh.lacakberkas.MainActivity"

    android:background="#3fe2b4"

    >


    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:width="80dp"
        android:ems="10"
        android:inputType="number"
        android:hint="                  Masukkan ID Berkas"
        android:padding="5dp"
        android:layout_margin="30dp"
        android:background="#ffffff"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_alignRight="@+id/edit_id"
        android:layout_centerVertical="true"
        android:background="#ea9c2e"
        android:onClick="updateData"
        android:text="Cari"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignStart="@+id/edit_id"
        android:layout_below="@+id/edit_id"
        android:background="#ea9c2e"
        android:onClick="getData"
        android:text="Mulai / Refresh "
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/get_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="41dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_id"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ikoncletra" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="25dp"
        android:text="1. Tekan tombol Mulai\n2. Masukkan ID berkas Anda\n3. Klik tombol Cari\n4. Kemudian untuk melihat kemajuan berkas Anda,\n    tekan tombol refresh lalu ulangi langkah \n    nomor 2 dan 3"
        />


</RelativeLayout>
